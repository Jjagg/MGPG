<?xml version="1.0" encoding="utf-8"?>
<Template>
  <SrcFolder>Windows</SrcFolder>
  <SrcFolder>Desktop</SrcFolder>
  <SrcFolder>Shared</SrcFolder>
  <Name>MonoGame Windows DX</Name>
  <Icon>Windows/__TemplateIcon.png</Icon>
  <PreviewImage>Windows/__PreviewImage.png</PreviewImage>
  <Description>A MonoGame game project for the Windows desktop using DirectX.</Description>

  <Var name="platform" hidden="true">Windows</Var>
  <Var name="projectName" semantic="projectName">MyProject</Var>
  <Var name="organization" semantic="organization" />

  <Project src="MonoGameWindowsApplication.csproj" dst="{{projectName}}.csproj">
    <File src="Program.cs" />
    <File src="Game1.cs" />
    <File src="Properties/AssemblyInfo.cs" />
    <File src="app.manifest" />
    <File src="Content/Content.mgcb" />
    <File src="Icon.ico" raw="true" />
  </Project>

  <!-- .vstemplate specific data -->
  <VSTemplateData element="SortOrder">43100</VSTemplateData>

</Template>

